# E-commerce Analytics Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE
# =============================================================================
DB_PASSWORD=your_secure_postgres_password
DATABASE_URL=postgresql://postgres:your_secure_postgres_password@localhost:5432/ecommerce_analytics

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API SECURITY
# =============================================================================
SECRET_KEY=your-secret-key-minimum-32-characters-long-change-this
ALGORITHM=HS256

# =============================================================================
# AMAZON SP-API
# =============================================================================
AMAZON_CLIENT_ID=your_amazon_client_id
AMAZON_CLIENT_SECRET=your_amazon_client_secret
AMAZON_REFRESH_TOKEN=your_amazon_refresh_token
AMAZON_AWS_ACCESS_KEY=your_aws_access_key
AMAZON_AWS_SECRET_KEY=your_aws_secret_key
AMAZON_ROLE_ARN=arn:aws:iam::YOUR_ACCOUNT:role/YOUR_ROLE
AMAZON_MARKETPLACE_ID=ATVPDKIKX0DER

# =============================================================================
# SHOPIFY
# =============================================================================
SHOPIFY_SHOP_NAME=your-shop-name
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_API_VERSION=2024-01

# =============================================================================
# WALMART MARKETPLACE
# =============================================================================
WALMART_CLIENT_ID=your_walmart_client_id
WALMART_CLIENT_SECRET=your_walmart_client_secret

# =============================================================================
# EMAIL (SendGrid)
# =============================================================================
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=alerts@yourdomain.com

# =============================================================================
# NOTIFICATIONS
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# MONITORING
# =============================================================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# =============================================================================
# GRAFANA
# =============================================================================
GRAFANA_PASSWORD=secure_grafana_password
